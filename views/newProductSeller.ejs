<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Product - <%= product.p_title %></title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Inter Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body class="font-inter bg-gray-50">

    <!-- Sticky Navbar -->
    <nav class="bg-white shadow-md sticky top-0 z-50">
        <div class="container mx-auto px-6 py-4 flex justify-between items-center">
            <!-- Logo -->
            <a href="/" class="text-2xl font-bold text-blue-600">Product Dashboard</a>

            <!-- Navigation Links -->
            <div class="space-x-6">
                <a href="/" class="text-gray-700 hover:text-blue-600 font-medium transition">Home</a>
                <a href="/products" class="text-gray-700 hover:text-blue-600 font-medium transition">All Products</a>
                <a href="/logout" class="text-white bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-md font-medium transition">Logout</a>
            </div>
        </div>
    </nav>

    <!-- Header Section -->
    <section class="bg-gradient-to-r from-blue-500 to-gray-600 text-white py-12">
        <div class="container mx-auto text-center">
            <h1 class="text-4xl font-bold">Update Product</h1>
        </div>
    </section>

    <!-- Main Content Section -->
    <div class="container mx-auto px-6 py-12 ">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 items-center">
            <!-- Product Image -->
            <div>
                <img src="<%= product.image %>" alt="<%= product.p_title %>" class="w-full h-96 object-cover rounded-lg shadow-md">
            </div>

            <!-- Product Details Form -->
            <div>
                <form id="update-product-form" action="/update-new-product/<%= product.p_id %>?_method=PUT" method="POST" class="space-y-6">
                    <!-- Product Title -->
                    <div>
                        <label for="p_title" class="block text-lg text-gray-800 mb-2">Product Title</label>
                        <input type="text" id="p_title" name="p_title" value="<%= product.p_title %>" class="w-full px-4 py-3 border rounded-md shadow-sm" required>
                    </div>

                    <!-- Product Price -->
                    <div>
                        <label for="price" class="block text-lg text-gray-800 mb-2">Price</label>
                        <input type="number" id="price" name="price" value="<%= product.price %>" class="w-full px-4 py-3 border rounded-md shadow-sm" step="0.01" required>
                    </div>

                    <!-- Product Quantity -->
                    <div>
                        <label for="quantity" class="block text-lg text-gray-800 mb-2">Quantity Available</label>
                        <input type="number" id="quantity" name="quantity" value="<%= product.quantity %>" class="w-full px-4 py-3 border rounded-md shadow-sm" required>
                    </div>

                    <!-- Product Description -->
                    <div>
                        <label for="desc" class="block text-lg text-gray-800 mb-2">Description</label>
                        <textarea id="desc" name="desc" rows="4" class="w-full px-4 py-3 border rounded-md shadow-sm" required><%= product.desc %></textarea>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="w-full bg-indigo-600 text-white px-6 py-3 rounded-md text-lg font-medium hover:bg-indigo-700 focus:outline-none focus:ring-4 focus:ring-indigo-500 focus:ring-opacity-50 transition">
                        Update Product
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Footer Section -->
    <footer class="bg-gray-100 py-6 mt-12">
        <div class="container mx-auto text-center">
            <p class="text-sm text-gray-600">Â© 2024 Product Dashboard. All Rights Reserved.</p>
        </div>
    </footer>

        <!-- JavaScript for Confirmation -->
        <script>
            // Adding confirmation before submitting the form
            document.getElementById('update-product-form').addEventListener('submit', function(event) {
                event.preventDefault(); // Prevent form submission
                const confirmation = confirm("Are you sure you want to update the product?");
    
                if (confirmation) {
                    // If confirmed, submit the form
                    this.submit();
                }
            });
        </script>

</body>

</html>
