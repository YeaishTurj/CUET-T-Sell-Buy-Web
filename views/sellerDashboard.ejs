<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seller Dashboard</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Google Font for Modern Typography -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
</head>

<body class="bg-gray-50 font-roboto">

    <!-- Main Container -->
    <div class="flex h-screen">

        <!-- Sidebar -->
        <div class="w-64 bg-indigo-600 text-white p-6 flex flex-col justify-between shadow-xl transition-all duration-300 ease-in-out">
            <div>
                <h1 class="text-3xl font-semibold mb-8">Seller Dashboard</h1>
                <nav>
                    <ul>
                        <li class="mb-6">
                            <a href="/seller" class="text-lg hover:text-indigo-200 transition-colors">Dashboard</a>
                        </li>
                        <li class="mb-6">
                            <a href="/seller/new-products" class="text-lg hover:text-indigo-200 transition-colors">New Products</a>
                        </li>
                        <li class="mb-6">
                            <a href="/seller/old-products" class="text-lg hover:text-indigo-200 transition-colors">Old Products</a>
                        </li>
                    </ul>
                </nav>
            </div>
            <div>
                <p class="text-sm text-center text-gray-200">Â© 2024 Seller Dashboard</p>
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="flex-1 p-8 overflow-y-auto">

            <!-- Header Section -->
            <div class="mb-12">
                <h2 class="text-3xl font-semibold text-gray-800">Welcome, <%= user.email %></h2>
                <p class="mt-2 text-lg text-gray-600">Your Role: <strong><%= user.role %></strong></p>
            </div>

            <!-- Section: New Products -->
            <section class="mb-16">
                <h3 class="text-2xl font-semibold text-gray-800 mb-6">Your New Products</h3>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
                    <% if (products.length > 0) { %>
                        <% products.forEach(product => { %>
                            <div class="bg-white shadow-lg rounded-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
                                <div class="p-4">
                                    <img src="<%= product.image %>" alt="<%= product.p_title %>" class="w-full h-48 object-cover rounded-md mb-4">
                                    <h4 class="text-xl font-semibold text-gray-800"><%= product.p_title %></h4>
                                    <p class="text-gray-600 mt-2"><strong>Price:</strong> $<%= product.price %></p>
                                    <p class="text-gray-500 mt-2"><%= product.desc.substring(0, 100) %>...</p>
                                    <a href="/products/<%= product.p_id %>" class="inline-block mt-4 text-indigo-600 hover:text-indigo-500 text-sm font-medium">View Details</a>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p class="text-center text-gray-500">You haven't added any new products yet.</p>
                    <% } %>
                </div>
            </section>

            <!-- Section: Old Products -->
            <section class="mb-16">
                <h3 class="text-2xl font-semibold text-gray-800 mb-6">Your Old Products</h3>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
                    <% if (oldProducts.length > 0) { %>
                        <% oldProducts.forEach(product => { %>
                            <div class="bg-white shadow-lg rounded-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
                                <div class="p-4">
                                    <img src="<%= product.image %>" alt="<%= product.op_title %>" class="w-full h-48 object-cover rounded-md mb-4">
                                    <h4 class="text-xl font-semibold text-gray-800"><%= product.op_title %></h4>
                                    <p class="text-gray-600 mt-2"><strong>Price:</strong> $<%= product.asking_price %></p>
                                    <p class="text-gray-500 mt-2"><%= product.op_desc.substring(0, 100) %>...</p>
                                    <a href="/old-products/<%= product.op_id %>" class="inline-block mt-4 text-green-600 hover:text-green-500 text-sm font-medium">View Details</a>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p class="text-center text-gray-500">You haven't added any old products yet.</p>
                    <% } %>
                </div>
            </section>

            <!-- Section: Pending Orders -->
            <section class="mb-16">
                <h3 class="text-2xl font-semibold text-gray-800 mb-6">Pending Orders</h3>
                <div class="space-y-6">
                    <% if (pendingOrders.length > 0) { %>
                        <% pendingOrders.forEach(order => { %>
                            <div class="bg-white p-6 shadow-md rounded-lg flex justify-between items-center">
                                <div>
                                    <h4 class="text-xl font-semibold text-gray-800"><%= order.p_title %></h4>
                                    <p class="text-gray-600 mt-2">Quantity: <%= order.quantity %></p>
                                    <p class="text-gray-600 mt-1">Price: $<%= order.price %></p>
                                    <p class="text-gray-600 mt-1">Buyer: <%= order.user_id %></p>
                                </div>
                                <div class="ml-4">
                                    <form action="/order/approve/<%= order.cart_id %>" method="POST">
                                        <button type="submit" class="inline-block bg-green-600 text-white px-6 py-3 rounded-md text-sm font-medium hover:bg-green-700 transition-colors">
                                            Approve Order
                                        </button>
                                    </form>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p class="text-center text-gray-500">No pending orders at the moment.</p>
                    <% } %>
                </div>
            </section>

        </div>
    </div>

</body>

</html>
